| {% block body %}

#node-container
	section.node-preview.project
		img.header(src="{{ node.properties.picture_header.thumbnail('l') }}")

	section.node-details-container.project

		.node-details-header
			.node-title-details
				.date {{ node._created }}

				//- | {% if node.properties.status %}
				.status {{node.properties.status}}
				//- | {% endif %}

		.node-details-description
			| {{node.description}}

		.node-extra
			.node-updates
				h3 Latest Updates
				ul.node-updates-list
					| {% if node.properties.nodes_latest %}

					| {% for n in node.properties.nodes_latest %}
					li.node-updates-list-item
						.info
							a.title(href="#", data-node_id="{{ n._id }}") {{ n.name }}
							span.details
								span.when {{ n._updated }} mins ago by
								span.who {{ n.user.full_name }}
					| {% endfor %}

					| {% else %}

					li.node-updates-list-item
						.info
							span.details
								span.when No updates yet.

					| {% endif %}

			.node-featured
				h3 Featured Assets
				ul.node-featured-list
					| {% for i in range(0, 4) %}
					li.node-featured-list-item
						a.image(href="")
							img(src="{{ node.properties.picture_header.thumbnail('m') }}")
						.info
							a.title(href="") Featured Name
							span.details
								span.who by
									span That Guy with Long Name
					| {% endfor %}

include ../_scripts

